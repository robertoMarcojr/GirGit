{
  "name": "girgit",
  "version": "1.0.0",
  "description": "A framework for building stealth applications",
  "main": "./main.js",
  "scripts": {
    "start": "electron --force-node-api-uncaught-exceptions-policy=true .",
    "build": "electron-builder",
    "build-node": "cd src/audio && node-gyp configure build",
    "rebuild": "electron-rebuild -f -w ."
  },
  "keywords": [],
  "author": "uncb",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "tesseract.js": "^6.0.1",
    "util": "^0.12.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "electron": "^35.7.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "install": "^0.13.0"
  },
  "build": {
    "appId": "com.shadow.girgit",
    "productName": "GirGit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "!src/audio/**/*.cpp",
      "!src/audio/**/*.h",
      "!src/audio/**/*.c",
      "!src/audio/build/Release/obj/**/*",
      "src/audio/build/Release/*.node",
      "assets/icons/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "node_modules/tesseract.js/src/worker/**/*",
      "node_modules/tesseract.js/dist/worker/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/mac/icon.icns"
    }
  }
}